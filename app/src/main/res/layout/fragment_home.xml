<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ellen.joshua.craftbeerguru.HomeFragment">

        <TextView
            android:id="@+id/tv_header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="casual"
            android:text="BROWSE BEERS BY:"
            android:textSize="18sp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="155dp" />

        <Button
            android:id="@+id/b_brewery"
            android:layout_width="120dp"
            android:layout_height="55dp"
            android:layout_above="@+id/b_taste"
            android:layout_alignStart="@+id/b_taste"
            android:fontFamily="sans-serif-condensed"
            android:onClick="bBreweryClicked"
            android:text="NAME"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_header_title" />

        <Button
            android:id="@+id/b_taste"
            android:layout_width="120dp"
            android:layout_height="55dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:fontFamily="sans-serif-condensed"
            android:onClick="bFlavorClicked"
            android:text="TASTE"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/b_brewery" />

        <Button
            android:id="@+id/b_style"
            android:layout_width="120dp"
            android:layout_height="55dp"
            android:layout_alignStart="@+id/b_taste"
            android:layout_below="@+id/b_taste"
            android:fontFamily="sans-serif-condensed"
            android:onClick="bStyleClicked"
            android:text="BEER STYLE"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="145dp"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/b_taste"
            app:layout_constraintVertical_bias="0.0" />

    </android.support.constraint.ConstraintLayout>